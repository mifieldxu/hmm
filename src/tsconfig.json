{
  // default build configuration for tsc
  // inherits from the project-wide tsconfig.json
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // actually emit files!
    "noEmit": false,
    "module": "CommonJS"
  },
  "include": [
    // restrict source files to .ts files in this directory
    "./**/*.ts"
  ],
  "exclude": [
    // exclude files in ./public from this build
    "./public/",
    // exclude files in ./tests from this build
    "./tests/",
    "node_modules"
  ]
}
