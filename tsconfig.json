{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "baseUrl": "./",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "declarationDir": "./types/",
    "paths": {
      "$": [
        "./src/"
      ],
      "$common": [
        "./src/common/"
      ],
      "$config": [
        "./src/common/config/"
      ],
      "$utils": [
        "./src/common/utils/"
      ],
      "$routes": [
        "./src/routes/"
      ],
      "$views": [
        "./src/views/"
      ],
      "$public": [
        "./src/public/"
      ],
      "$client_js": [
        "./src/public/scripts/"
      ],
      "$dev": [
        "./src/.dev/"
      ]
    },
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "noEmitOnError": true,
    "newLine": "lf",
    "noErrorTruncation": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./types/",
    "./dist/",
    "node_modules"
  ]
}
